{
	"name": "favs-chart",
	"type": "module",
	"scripts": {
		"format": "prettier . --write --ignore-unknown",
		"lint": "eslint . --fix",
		"lint:style": "stylelint '**/*.{css}' --fix",
		"prepare": "husky"
	},
	"lint-staged": {
		"**/*.{js}": [
			"bun lint"
		],
		"**/*.{css}": [
			"bun lint:style"
		],
		"**/*": [
			"bun format"
		]
	},
	"dependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.25.1",
		"bunx": "^0.1.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^10.1.2",
		"globals": "^16.0.0",
		"stylelint": "^16.19.1"
	},
	"devDependencies": {
		"@types/bun": "^1.2.11",
		"eslint": "^9.25.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"prettier": "3.5.3",
		"stylelint-config-clean-order": "^7.0.0",
		"stylelint-config-standard": "^38.0.0"
	}
}
